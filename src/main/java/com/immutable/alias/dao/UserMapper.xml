<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.immutable.alias.dao.UserMapper">
	
<select id="selectUser" parameterType="com.immutable.alias.pojos.User" resultType="com.immutable.alias.pojos.User">
	SELECT * FROM user WHERE username=#{username} AND password=#{password}
</select>

<select id="selectOneUser" parameterType="Map" resultType="com.immutable.alias.pojos.User">
	SELECT * FROM user WHERE id=#{userId} 
</select>
<insert id="insertUser" parameterType="com.immutable.alias.pojos.User" flushCache="true">
   INSERT INTO user (id,username,password) VALUES (#{id},#{username},#{password})
</insert>
<update id="updateUser" parameterType="com.immutable.alias.pojos.User">
	UPDATE user SET password=#{password} WHERE id=#{id}
</update>
<delete id="deleteUser" parameterType="int">
	DELETE FROM user WHERE id=#{userId}
</delete>

</mapper>